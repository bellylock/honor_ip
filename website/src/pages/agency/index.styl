.agency
    .bannerbox
        width: 100%
        height:500px
        background: url("../../img/banner1.jpg") no-repeat center
        background-size: 100% 100%
        .conbox
            width:1000px
            height:100%
            padding-top : 130px
            margin:0 auto
            h1
                font-size:34px
                color: #fff
                font-size: 34px;
                text-align: left;
    .main
        background-color :white
        padding:60px 0
        .container
            width: 1200px
            margin: 0 auto
            ul
                overflow: hidden
                width: 100%
                li
                    &:nth-child(1){
                        background: url("../../img/f1.png") no-repeat center
                        background-size : 310px 310px
                        margin-bottom:50px
                    }
                    &:nth-child(2){
                        padding:75px 0 0 160px
                        margin-bottom:50px
                    }
                    &:nth-child(3){
                        padding:60px 0 0 180px
                    }
                    &:nth-child(4){
                        background: url("../../img/f2.png") no-repeat center
                        background-size : 310px 310px
                    }
                    list-style :none
                    float: left
                    width: 50%
                    height: 260px
                    span
                        font-size : 30px
                        color: #000
                    i
                        display: block
                        width: 100px
                        height: 4px
                        margin: 15px 0
                        background-color:#ff5e00
                    p
                        font-size: 15px;
                        color: #333;
                        line-height: 24px;
                        margin-bottom: 6px;
        .table
            width: 1150px;
            margin: 80px auto 0 auto;
            h1
                font-size: 26px;
                color: #676767;
            th,td
                text-align: center