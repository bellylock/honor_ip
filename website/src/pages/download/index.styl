.downbox
    .container
        width:1200px
        padding: 150px 15px 0
        margin:0 auto
    .bannerimg
        width: 100%
        height: 420px
        background: url("../../img/banner8.jpg") no-repeat center
        background-size :100%
        h2
            font-size :24px
            color: #fff
            margin-bottom: 20px

        span
            font-size 15px
            color: #fff
    .bins
        width: 1200px
        margin: 60px auto 30px
        padding: 0 15px
        .cabin
            &:hover{
                -webkit-box-shadow: 0 0 22px 4px #ccc;
                -moz-box-shadow: 0 0 22px 4px #ccc;
                box-shadow: 0 0 22px 4px #ccc;
                transform :translateY(-15px)
            }
            position: relative
            transition :all .4s
            display: inline-block
            width: 250px
            margin: 0 20px 30px
            background-color :white
            cursor: pointer
            img
                width: 42px;
                position: absolute
                top: 22px
                left: 50%
                margin-left: -18px
            .top
                width: 100%
                height: 44px
                background-color:#00aaea
            .text
                width: 100%;
                text-align: center;
                padding: 36px 0 22px;
                height: 250px;
                -webkit-box-sizing: border-box
                -moz-box-sizing: border-box
                box-sizing: border-box
                p
                    &.hide{
                        display: none
                    }
                    &.spep{
                        font-size :16px
                        color: #dc0201
                        line-height:90px
                    }
                    font-size : 14px
                    color: #000
                    margin-bottom: 0
                    line-height: 30px
                a
                    &:hover{
                        background-color :#06a6b7
                    }
                    font-size: 14px;
                    color: #fff
                    background-color: #0bcade
                    display: inline-block
                    width: 40%
                    line-height: 34px
                    text-align: center
                    margin-top: 16px