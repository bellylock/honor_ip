.address
    width: 100%
    .bannerimg
        height:300px
        background: url("../../img/banner5.jpg") no-repeat center
        background-size :100% 100%
        .container
            width: 1200px
            margin : 0 auto
            height: 300px
            padding-top: 110px
            padding-left: 96px
            h1
                font-size 30px
                color: #fff
                text-align: left
    .provice
        width: 1000px
        margin: 50px auto
        background-color :white
        padding: 50px
        .bin
            margin-bottom: 20px
            &:last-child{
                margin-bottom:0
            }
            h1
                font-size :24px
                color: #333
                margin-bottom: 20px
                text-align: left
            ul
                overflow: hidden
                padding: 0
                li
                    display: block
                    list-style none
                    margin-bottom: 15px;
                    span
                        width: 120px
                        font-size :14px
                        color: #666
                        display: inline-block
                    i
                        &.err{
                            background-color :#f95353
                        }
                        &.nor{
                            background-color :#0095ff
                        }
                        display: inline-block
                        font-size :13px
                        color: #fff
                        padding: 0 15px
                        line-height: 22px
                        font-style normal
                        -webkit-border-radius: 4px
                        -moz-border-radius: 4px
                        border-radius: 4px