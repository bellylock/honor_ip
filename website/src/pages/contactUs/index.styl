.aboutusbox
    .container
        width: 1200px
        margin: 0 auto
        .aboutcabin
            overflow: hidden
            margin: 50px 0;
            .tit
                width:100%
                float: left
                h1
                    color: #1999f7
                    text-align: center
                    margin-bottom:40px
            #map
                width:770px
                float: left
                height:570px
                font-size:12px
            .details
                width:370px
                float: right
                display: inline-block
                p
                    font-size: 15px
                    color: #000
            .BMapLabel{
                position: relative;
                left: -30px !important;
                top: -40px !important;
                font-size: 15px !important;
                border: 1px solid #ccc !important;
                padding: 5px !important;
            }
            .BMapLabel:before{
                position: absolute;
                left: 40%;
                bottom: -16px;
                border: solid transparent;
                border-width: 8px;
                content:"";
                border-top-color: black;
            }
            .BMapLabel:after{
                position: absolute;
                left: 40%;
                bottom: -16px;
                border: solid transparent;
                border-width: 8px;
                content:"";
                border-top-color: white;
            }
            #map Style Attribute{
                overflow: visible !important;
            }
